<link href="~/Content/Site.css" rel="stylesheet" />
@model IEnumerable<DomainClasses.Request>

@{
    ViewBag.Title = "AllRequests";
}

<div class="container-fluid">
    <div class="col-lg-12">
        <table class="table table-bordered  table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Subject)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InterceptionCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UploadPath)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DeliveryDays)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InterceptionCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UploadPath)
                        @Html.ActionLink("دانلود", "DownloadFile", new { requestId = item.RequestId }, new { @class = "btn btn-info" })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeliveryDays)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.RequestId }, new { @class = "btn btn-warning" }) |@Html.ActionLink("Delete", "Delete", new { id = item.RequestId }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>

    </div>
</div>

